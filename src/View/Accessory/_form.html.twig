<form method="post">
    <div class="form-group">
        <label for="name">Accessory name</label>
        <input type="text" name="name" id="name"  value="{{ accessory.name }}">
        <p>{{ errors.name }}</p>
    </div>
    <div class="form-group">
        <label for="url">Accessory image URL</label>
        <input type="text" name="url" id="url" value="{{ accessory.url }}">
        <p>{{ errors.url }}</p>
    </div>
    <div class="form-btn">
    <button class="btn primary-btn">Create this accessory</button>
    </div>
</form>
